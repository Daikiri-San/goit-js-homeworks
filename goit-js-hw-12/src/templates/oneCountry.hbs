<section class="country-section">
    <div>
        <h2 class="country-title">{{name}}</h2>
        <p class="country-item"><span class="designation">Capital:</span> {{capital}}</p>
        <p class="country-item"><span class="designation">Population:</span> {{population}}</p>
        <span class="designation">Languages:</span>
        <ul>
            {{#each languages}}
            <li class="country-item country-list">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="flag">
        <img src="{{flag}}" alt="flag of {{name}}">
    </div>
</section>